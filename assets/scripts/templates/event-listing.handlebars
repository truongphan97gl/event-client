{{#each events as |event|}}
  <section data-id="{{event.id}}" class="{{#if (isOverdue event.date)}}redSection{{/if}}">
    <div class="item basicBox" >
      <h6>ID:</h6>
      <h3>
          {{event.id}}
      </h3>
      <h6>Name:</h6>
      <h3>
        {{#if event.name}}
          {{event.name}}
        {{else}}
          No name provided.
        {{/if}}
      </h3>

      <h6>Place:</h6>
      <h3>
        {{#if event.place}}
          {{event.place}}
        {{else}}
          No place provided.
        {{/if}}
      </h3>
      <h6>Date:</h6>
      {{#if (isOverdue event.date)}}
        <h3 style="color:red">
          {{#if event.date}}
            {{event.date}}
          {{else}}
            No date provided.
          {{/if}}
        </h3>
      {{else}}
      <h3>
        {{#if event.date}}
          {{event.date}}
        {{else}}
          No date provided.
        {{/if}}
      </h3>
      {{/if}}

    <h6>Duration:</h6>
    <h3>
      {{#if event.duration}}
        {{event.duration}}
      {{else}}
        No duration provided.
      {{/if}}
    </h3>
    <h6>Note:</h6>
    <p>
      {{#if event.note}}
        {{event.note}}
      {{else}}
        No note provided.
      {{/if}}
    </p>

  </div>
    <!-- <button class="btn btn-danger" data-id="{{book.id}}">
      Remove
    </button> -->
    <button data-id="{{event.id}}" class="edit-button button button-block small">EDIT EVENT!</button>
    <button data-id="{{event.id}}" class="remove-button button button-block small">DELETE EVENT!</button>
  </section>

{{/each}}
