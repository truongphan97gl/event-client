<section data-id="{{event.id}}">
  <div class="item">
    <h6>Name:</h6>
    <h3>
      {{#if event.name}}
        {{event.name}}
      {{else}}
        No name provided.
      {{/if}}
    </h3>
    <h6>ID:</h6>
    <h3>
        {{event.id}}
    </h3>
  <h6>Date:</h6>
  <h3>
    {{#if event.date}}
      {{event.date}}
    {{else}}
      No date provided.
    {{/if}}
  </h3>
  <h6>Duration:</h6>
  <h3>
    {{#if event.duration}}
      {{event.duration}}
    {{else}}
      No duration provided.
    {{/if}}
  </h3>
  <h6>Note:</h6>
  <p>
    {{#if event.note}}
      {{event.note}}
    {{else}}
      No note provided.
    {{/if}}
  </p>
  <h6>ID:</h6>
  <p>
    {{#if event.id}}
      {{event.id}}
    {{else}}
      No note provided.
    {{/if}}
  </p>
</div>
